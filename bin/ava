#!/usr/bin/env node

var program = require('commander')

var ran = false;
program
  .version('0.0.1')

program
  .command('server')
  .option('-p, --port', 'port', parseInt)
  .description('start a local server')
  .action(function() {
    ran = true;
    require('../hearts/server')
  });

program
  .command('new')
  .description('start a new agent')
  .action(function(cmd) {
    ran = true;
  });

program.parse(process.argv)

if(!ran) {
  program.outputHelp()
}


